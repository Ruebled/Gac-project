#VRML V2.0 utf8
#0.7853981633955001 rad=45 grade
#1.5707963267910001 rad= 90 grade
#3.1415926535820001 rad= 180 grade
Viewpoint { 
	fieldOfView 0.7853981633955001
	position 0 0 40
	orientation 0 0 1 0
	description "the block"
	jump TRUE
}
Group {
	children [
		Transform {
		 	#for scalling all the building
		 	scale 1 1 1
		 	center 0 0 0
		 	children [
				#bigger components of all
				Transform {
					translation -3 1.3 0
					children [
						Shape {
							appearance Appearance {
								material Material {}
							}
							geometry Box {
								size 31 17 10
							}
						}
					]
				}
				#in between block
				Transform {
					rotation 1 0 0 -1.5707963267910001
					translation 12.5 -7.2023 5
					children [
						Shape {
							appearance Appearance {
								material Material {}
							}
							geometry Extrusion {
								beginCap TRUE
								endCap TRUE
								ccw TRUE
								convex TRUE
								creaseAngle 0
								crossSection [ 0 0, 0 17, 3 10, 3 0, 0 0]
								orientation 0 0 1 0
								solid FALSE
								spine [0 0 0, 0 10 0]
							}
						}
					]
				}
				# right mini building
            	Transform {
					translation 17.5 -5.2111 0
					rotation 0 1 0 1.5707963267910001
					children [
						Shape {
							appearance Appearance {
								material Material {}
							}
							geometry Box {
								size 10 4 4
							}
						}
					]
				} 
				#The roof obove the right mini buiding
				Transform {
					rotation 1 0 0 -1.5707963267910001
					translation 15.5 -3.25 5
					children [
							Shape {
								appearance Appearance {
									material Material {}
								}
								geometry Extrusion {
									beginCap TRUE
									endCap TRUE
									ccw TRUE
									convex TRUE
									creaseAngle 0
									crossSection [ 0 0, 6. 0, 0 6.5, 0 0]
									orientation 0 0 1 0
									solid FALSE
									spine [0 0 0, 0 10 0]
								}
							}	
					]
				}
				#the real roof
				Transform {
					rotation 0 0 1 -0.87053981633955001
					translation 18 0 0
					children [
						Shape {
							appearance Appearance {
								texture ImageTexture {
									url ["./mini_roof.png"]
								}
								textureTransform TextureTransform {
									scale 5 9
									rotation 1.5707963267910001
								}
							}
							geometry Box {
								size 8.5 0.2 10.5
							}
						}
					]
				}
				#another real roof
				Transform {
					rotation 0 0 1 -1.1797963267910001
					translation 14.5 5.4 0
					children [
						Shape {
							appearance Appearance {
								texture ImageTexture {
									url ["./mini_roof.png"]
								}
								textureTransform TextureTransform {
									scale 5 9
									rotation 1.5707963267910001
								}
							}
							geometry Box {
								size 8.5 0.2 10.5
							}
						}
					]
				}

				#amphitheatre
				Transform {
					translation 6 -3.6 10
					rotation 1 0 0 3.1415926535820001 
					scale 1 1 1
					children [
						Shape {
							appearance Appearance {
								material Material {
									diffuseColor 1 1 1
								}
							}
							geometry Extrusion {
								beginCap TRUE
								endCap TRUE
								ccw TRUE
								convex TRUE
								creaseAngle 0
								crossSection [-10 5, -10 -5, 7.9 -5, 9.0 -3.9, 9.0 -1.4, 8.0 -1.4, 8.0 -0.4, 10 -0.4, 10 5, -10 5]
								orientation 0 0 1 0
								solid FALSE
								spine [0 0 0, 0 3.6 0]
							}									
						}
					]
				}
				#amphitheatre roof
				Transform {
					translation 6 -3 10
					scale 1 1 1
					children [
				    	Inline {
							url ["./bloc_mic/acoperis.wrl"]
							
						}
					]
				}
			]
		}
	]
}
